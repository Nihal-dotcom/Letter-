// Wait for the login to complete (adjust wait time as needed)
        WebDriverWait wait = new WebDriverWait(driver, TimeSpan.FromSeconds(10));
        wait.Until(ExpectedConditions.UrlToBe("https://example.com/dashboard"));  // Change the expected URL after successful login

        // Click on the menu after successful login
        IWebElement menuElement = wait.Until(ExpectedConditions.ElementIsVisible(menuLocator));
        menuElement.Click();

        // Wait for the page to load and the search box to be visible (adjust wait time as needed)
        wait.Until(ExpectedConditions.ElementIsVisible(searchBoxLocator));

        // Find the search box, enter the search value, and submit the form
        IWebElement searchBox = driver.FindElement(searchBoxLocator);
        searchBox.SendKeys(searchValue);
        searchBox.Submit();

        // Perform further actions as needed

        // Close the browser window
        driver.Quit();
    }
}
