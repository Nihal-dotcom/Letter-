using OpenQA.Selenium;
using OpenQA.Selenium.Chrome;

class ikare
{
    static void Main()
    {
        // Set up the WebDriver (ensure you have the ChromeDriver executable in your path)
        IWebDriver driver = new ChromeDriver();

        // Navigate to the login page
        driver.Navigate().GoToUrl("https://ikareng.es.ad.adp.com/dashboard");

        // Find the username and password fields, and the login button
        IWebElement usernameInput = driver.FindElement(By.Id("i0116"));
        usernameInput.SendKeys("nihal.sinha@adp.com");
        IWebElement usernameInputnextbutton = driver.FindElement(By.Id("idSIButton9"));
        Thread.Sleep(1000);
        usernameInputnextbutton.Click();
        
        IWebElement passwordInput = driver.FindElement(By.Id("i0118"));
        passwordInput.SendKeys("hello@123");
        IWebElement passwordInputsubmitbutton = driver.FindElement(By.Id("idSIButton9"));
        Thread.Sleep(1000);
        passwordInputsubmitbutton.Click();
        Thread.Sleep(500);

   
        driver.Quit();
    }
}
