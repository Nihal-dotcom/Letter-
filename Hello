using OpenQA.Selenium;
using OpenQA.Selenium.Chrome;

class Program
{
    static void Main()
    {
        // Set up the WebDriver (ensure you have the ChromeDriver executable in your path)
        IWebDriver driver = new ChromeDriver();

        // Navigate to the login page
        driver.Navigate().GoToUrl("your_login_page_url");

        // Find the username and password fields, and the login button
        IWebElement usernameInput = driver.FindElement(By.Id("username"));
        IWebElement passwordInput = driver.FindElement(By.Id("password"));
        IWebElement loginButton = driver.FindElement(By.Id("loginButton"));

        // Provide login credentials
        usernameInput.SendKeys("your_username");
        passwordInput.SendKeys("your_password");

        // Click the login button
        loginButton.Click();

        // Wait for the login to complete (you may need to customize the wait condition)
        // For example, you can use WebDriverWait to wait for a specific element on the dashboard
        // WebDriverWait wait = new WebDriverWait(driver, TimeSpan.FromSeconds(10));
        // wait.Until(ExpectedConditions.ElementIsVisible(By.Id("dashboardElement")));

        // Now, you should be on the dashboard
        // You can perform further actions on the dashboard as needed

        // Close the browser
        driver.Quit();
    }
}
